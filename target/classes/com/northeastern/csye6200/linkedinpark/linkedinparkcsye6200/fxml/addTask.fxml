<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.northeastern.csye6200.linkedinpark.linkedinparkcsye6200.AddTaskController">
   <children>
      <TextField fx:id="taskTitle" layoutX="35.0" layoutY="82.0" prefHeight="26.0" prefWidth="297.0" promptText="Task title" />
      <Label layoutX="33.0" layoutY="14.0" prefHeight="55.0" prefWidth="201.0" text="Add Task">
         <font>
            <Font name="System Bold" size="30.0" />
         </font>
      </Label>
      <TextArea fx:id="taskDescription" layoutX="34.0" layoutY="114.0" prefHeight="70.0" prefWidth="533.0" promptText="Add a description" />
      <Button fx:id="btnFinish" layoutX="224.0" layoutY="355.0" mnemonicParsing="false" onAction="#ValidateNewTask" prefHeight="31.0" prefWidth="160.0" text="Finish" />
      <Button fx:id="btnBack" layoutX="525.0" layoutY="29.0" mnemonicParsing="false" onAction="#ReturnToDashboard" text="Back" />
      <Label layoutX="36.0" layoutY="194.0" text="Assign to " />
      <Label layoutX="365.0" layoutY="194.0" text="Finish before (optional)" />
      <CheckBox fx:id="togglePriority" layoutX="36.0" layoutY="263.0" mnemonicParsing="false" text="Set as priority task" />
      <ComboBox fx:id="assignTo" layoutX="36.0" layoutY="221.0" prefHeight="27.0" prefWidth="243.0" />
      <DatePicker fx:id="finishByDate" layoutX="365.0" layoutY="222.0" prefHeight="26.0" prefWidth="201.0" />
      <Label fx:id="errorLabel" layoutX="160.0" layoutY="314.0" prefHeight="18.0" prefWidth="289.0" textAlignment="CENTER" textFill="RED" />
   </children>
</AnchorPane>
